# =================
# 對外 PORT 配置 - 統一在最上面管理
# =================
API_PORT=9121           # Backend API 服務
DB_PORT=9221            # PostgreSQL 資料庫
REDIS_PORT=9321         # Redis 快取服務
FLOWER_PORT=9421        # Celery Flower 監控介面
NGINX_HTTP_PORT=9521      # Nginx HTTP 端口

# Application Settings
APP_NAME=Stock Analysis System
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://stock_user:password@localhost:5432/stock_analysis
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_analysis
DB_USER=stock_user
DB_PASSWORD=password
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Taipei

# Stock Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_ENABLED=true
FINNHUB_API_KEY=your-finnhub-api-key

# Technical Analysis Settings
DEFAULT_STOCK_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,AMZN
DATA_UPDATE_INTERVAL_MINUTES=60
ANALYSIS_LOOKBACK_DAYS=252

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5

# Background Tasks
ENABLE_SCHEDULED_TASKS=true
MARKET_DATA_UPDATE_SCHEDULE=0 9 * * 1-5
TECHNICAL_ANALYSIS_SCHEDULE=0 18 * * 1-5

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=csv,xlsx,json

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_stock_analysis
TEST_REDIS_URL=redis://localhost:6379/15