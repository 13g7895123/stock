# Go 爬蟲服務環境變數配置
# 複製此檔案為 .env 並修改相關配置

# ==================== 資料庫配置 ====================
DATABASE_URL=postgresql://stock_user:password@localhost:9221/stock_analysis
POSTGRES_DB=stock_analysis
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=password
POSTGRES_PORT=9221

DB_POOL_SIZE=20
DB_MAX_IDLE=10

# ==================== 服務配置 ====================
GO_CRAWLER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== 爬蟲配置 ====================
MAX_WORKERS=100
BATCH_SIZE=50
REQUEST_TIMEOUT=30s
SMART_SKIP_DAYS=1

# ==================== Redis 配置 ====================
REDIS_PORT=9321
REDIS_URL=redis://localhost:9321/0

# ==================== 監控配置 ====================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==================== Python 整合配置 ====================
# Python 後端是否啟用 Go 爬蟲服務
GO_CRAWLER_ENABLED=false
# Go 爬蟲服務 URL（從 Python 訪問）
GO_CRAWLER_URL=http://localhost:8080
# 超時設定
GO_CRAWLER_TIMEOUT=30
# 失敗時是否降級到 Python
FALLBACK_TO_PYTHON=true
