[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E722: do not use bare except
    E722
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    alembic,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .coverage,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401,
    # Test files can have unused imports and fixtures
    test_*.py:F401,F811,
    *_test.py:F401,F811
max-complexity = 10
import-order-style = google
application-import-names = src,tests